{
  "info": {
    "version": "1.0",
    "title": "Questions"
  },
  "host": "0.0.0.0:4000",
  "definitions": {
    "Questions": {
      "description": "A collection of Questions",
      "items": {
        "$ref": "#/definitions/Question"
      },
      "title": "Questions",
      "type": "array"
    },
    "Question": {
      "description": "A single question",
      "example": {
        "answers": [],
        "category": "technology",
        "description": "What is elixir?",
        "id": "uuid",
        "title": "Elixir",
        "user": {
          "email": "dwight@mail.com",
          "id": "uuid",
          "name": "Dwight",
          "role": "admin"
        }
      },
      "properties": {
        "answers": {
          "description": "List of answers",
          "type": "list"
        },
        "category": {
          "description": "Question category",
          "type": "string"
        },
        "description": {
          "description": "Question description",
          "type": "string"
        },
        "id": {
          "description": "Unique identifier",
          "type": "string"
        },
        "status": {
          "description": "Question status",
          "type": "string"
        },
        "title": {
          "description": "Question title",
          "type": "string"
        },
        "user": {
          "properties": {
            "email": {
              "description": "User email",
              "type": "string"
            },
            "id": {
              "description": "Unique identifier",
              "type": "string"
            },
            "name": {
              "description": "User name",
              "type": "string"
            },
            "role": {
              "description": "User role",
              "type": "string"
            }
          },
          "required": [
            "id"
          ],
          "type": "object"
        }
      },
      "required": [
        "category",
        "description",
        "title"
      ],
      "title": "Question",
      "type": "object"
    },
    "CreateQuestionBody": {
      "description": "Template for creating questions",
      "properties": {
        "category": {
          "description": "Question category",
          "type": "string"
        },
        "description": {
          "description": "Question description",
          "type": "string"
        },
        "title": {
          "description": "Question title",
          "type": "string"
        },
        "user_id": {
          "description": "Unique identifier",
          "type": "string"
        }
      },
      "required": [
        "category",
        "description",
        "title"
      ],
      "title": "Create Question Model",
      "type": "object"
    }
  },
  "paths": {
    "/questions": {
      "get": {
        "description": "List Questions",
        "operationId": "QuestionsWeb.QuestionController.index",
        "parameters": [
          {
            "description": "Question Title",
            "in": "query",
            "name": "title",
            "required": true,
            "type": "string"
          },
          {
            "description": "Question Description",
            "in": "query",
            "name": "description",
            "required": true,
            "type": "string"
          },
          {
            "collectionFormat": "csv",
            "description": "Available values : technology, engineering, science, others",
            "in": "query",
            "items": {
              "enum": [
                "technology",
                "engineering",
                "science",
                "others"
              ],
              "type": "string"
            },
            "name": "category",
            "required": true,
            "type": "array"
          },
          {
            "collectionFormat": "csv",
            "default": "open",
            "description": "Available values : open, in_progress, completed",
            "in": "query",
            "items": {
              "enum": [
                "open",
                "in_progress",
                "completed"
              ],
              "type": "string"
            },
            "name": "status",
            "required": false,
            "type": "array"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Questions"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "summary": "",
        "tags": [
          "Question"
        ]
      },
      "post": {
        "description": "Add a new question",
        "operationId": "QuestionsWeb.QuestionController.create",
        "parameters": [
          {
            "description": "Question object that needs to be added to the store",
            "in": "body",
            "name": "tracker",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateQuestionBody"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Question"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "summary": "",
        "tags": [
          "Question"
        ]
      }
    },
    "/questions/{question_id}": {
      "delete": {
        "description": "Delete a question",
        "operationId": "QuestionsWeb.QuestionController.delete_question",
        "parameters": [
          {
            "description": "ID of question to delete",
            "in": "path",
            "name": "question_id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Question Not Found"
          }
        },
        "summary": "",
        "tags": [
          "Question"
        ]
      },
      "get": {
        "description": "Get Question",
        "operationId": "QuestionsWeb.QuestionController.show",
        "parameters": [
          {
            "description": "ID of question to return",
            "in": "path",
            "name": "question_id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Question"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Question Not Found"
          }
        },
        "summary": "",
        "tags": [
          "Question"
        ]
      }
    },
    "/questions/{question_id}/complete": {
      "patch": {
        "description": "Complete a question",
        "operationId": "QuestionsWeb.QuestionController.complete",
        "parameters": [
          {
            "description": "ID of question to complete",
            "in": "path",
            "name": "question_id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Question"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Question Not Found"
          }
        },
        "summary": "",
        "tags": [
          "Question"
        ]
      }
    }
  },
